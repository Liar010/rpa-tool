<Window x:Class="RPAEditor.Dialogs.FileDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ファイル削除" Height="220" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 削除対象ファイル -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="削除対象ファイル:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtFilePath" Grid.Column="0" Padding="5" VerticalContentAlignment="Center"/>
                <Button x:Name="btnBrowse" Grid.Column="1" Content="参照..." Width="80" Margin="5,0,0,0" Click="BtnBrowse_Click"/>
            </Grid>
        </StackPanel>

        <!-- 警告メッセージ -->
        <Border Grid.Row="1" Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="1" Padding="10" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="このファイルは完全に削除されます。元に戻すことはできません。"
                           TextWrapping="Wrap"
                           Foreground="#856404"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Height="32" Margin="0,0,10,0" Click="BtnOk_Click" IsDefault="True"/>
            <Button Content="キャンセル" Width="100" Height="32" Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
