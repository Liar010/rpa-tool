<Window x:Class="RPAEditor.HotKeyActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ショートカットキー設定" Height="450" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="修飾キー:" Margin="0,5"/>
        <StackPanel Grid.Row="1" Margin="0,5">
            <CheckBox x:Name="chkCtrl" Content="Ctrl" Margin="0,3"/>
            <CheckBox x:Name="chkShift" Content="Shift" Margin="0,3"/>
            <CheckBox x:Name="chkAlt" Content="Alt" Margin="0,3"/>
            <CheckBox x:Name="chkWin" Content="Windows (Win)" Margin="0,3"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="キーの種類:" Margin="0,10,0,5"/>
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,10,0,5">
            <RadioButton x:Name="rbAlphaNum" Content="文字・数字 (A-Z, 0-9)" IsChecked="True" Margin="0,3"/>
            <RadioButton x:Name="rbSymbol" Content="記号 (; : , . / など)" Margin="0,3"/>
            <RadioButton x:Name="rbFunction" Content="ファンクションキー (F1-F12)" Margin="0,3"/>
            <RadioButton x:Name="rbSpecial" Content="特殊キー (Enter, 矢印キーなど)" Margin="0,3"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Text="キー:" Margin="0,10,0,5"/>
        <ComboBox x:Name="cmbKey" Grid.Row="4" Margin="0,5,0,5" Height="25">
            <!-- 初期表示は文字・数字 -->
        </ComboBox>

        <StackPanel Grid.Row="5" Margin="0,10" VerticalAlignment="Top">
            <TextBlock Text="例: Ctrl+;(日付), Ctrl+:(時刻), Ctrl+W, Win+R など"
                       FontStyle="Italic"
                       Foreground="Gray"
                       TextWrapping="Wrap"/>

            <!-- セキュリティ警告（動的に表示） -->
            <Border x:Name="warningBorder"
                    Background="#FFF4E5"
                    BorderBrush="OrangeRed"
                    BorderThickness="1"
                    Padding="8"
                    Margin="0,10,0,0"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock FontWeight="Bold" Foreground="OrangeRed" Text="⚠ セキュリティ制限"/>
                    <TextBlock x:Name="txtWarning"
                               TextWrapping="Wrap"
                               Foreground="OrangeRed"
                               Margin="0,3,0,0"
                               Text="Ctrl+Alt+DeleteはWindowsのセキュリティ機能により送信できません"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnOK" Content="OK" Width="80" Height="30" Margin="5" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="キャンセル" Width="80" Height="30" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
