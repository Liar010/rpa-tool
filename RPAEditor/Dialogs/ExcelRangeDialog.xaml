<Window x:Class="RPAEditor.Dialogs.ExcelRangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel範囲操作" Height="650" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- スクロール可能なコンテンツエリア -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="15,15,15,0">
            <StackPanel>

                <!-- 操作選択 -->
                <GroupBox Header="操作選択" Padding="10" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="rbRead" Content="読み取り" IsChecked="True" Margin="0,0,15,0"/>
                        <RadioButton x:Name="rbWrite" Content="書き込み" Margin="0,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- ファイル参照方法 -->
                <GroupBox Header="ファイル参照方法" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <RadioButton x:Name="rbFilePath" Content="ファイルパスで指定" IsChecked="True" Margin="0,0,0,5"/>
                        <RadioButton x:Name="rbOpenAction" Content="開くアクションの番号で指定" Margin="0,5,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- ファイルパス -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="ファイルパス:" Margin="0,0,0,5"/>
                    <DockPanel>
                        <Button x:Name="btnBrowse" Content="参照..." Width="70" DockPanel.Dock="Right" Margin="5,0,0,0"/>
                        <TextBox x:Name="txtFilePath"/>
                    </DockPanel>
                </StackPanel>

                <!-- 開くアクション番号 -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="開くアクション番号:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbOpenAction" Height="25"/>
                </StackPanel>

                <!-- シート名 -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="シート名 (省略時は最初のシート):" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSheetName"/>
                </StackPanel>

                <!-- 範囲モード選択（読み取り時のみ表示） -->
                <StackPanel x:Name="pnlReadMode" Margin="0,0,0,10" Visibility="Visible">
                    <TextBlock Text="読み取りモード:" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="rbFixedRange" Content="固定範囲" IsChecked="True" Margin="0,0,15,0"/>
                        <RadioButton x:Name="rbVariableRows" Content="可変行数テーブル"/>
                    </StackPanel>
                </StackPanel>

                <!-- 固定範囲設定 -->
                <StackPanel x:Name="pnlFixedRange" Margin="0,0,0,10" Visibility="Visible">
                    <TextBlock x:Name="lblRange" Text="範囲 (例: A1:B10):" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtRange"/>
                </StackPanel>

                <!-- 可変行数テーブル設定（読み取り時のみ表示） -->
                <StackPanel x:Name="pnlVariableRows" Margin="0,0,0,10" Visibility="Collapsed">
                    <TextBlock Text="開始列 (例: A):" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtStartColumn" Text="A" Margin="0,0,0,10"/>

                    <TextBlock Text="ヘッダー行番号:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtHeaderRow" Text="1" Margin="0,0,0,10"/>

                    <TextBlock Text="データ開始行番号:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtDataStartRow" Text="2" Margin="0,0,0,10"/>

                    <TextBlock Text="列数 (0=自動検出):" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtColumnCount" Text="0"/>
                </StackPanel>

                <!-- 書き込み値入力（書き込み時のみ表示） -->
                <StackPanel x:Name="pnlWriteValue" Margin="0,0,0,10" Visibility="Collapsed">
                    <TextBlock Text="書き込み値の入力方法:" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <RadioButton x:Name="rbDirectInput" Content="直接入力" IsChecked="True" Margin="0,0,15,0"/>
                        <RadioButton x:Name="rbReadReference" Content="読み取りアクション参照"/>
                    </StackPanel>

                    <TextBlock x:Name="lblDirectValue" Text="値 (タブ区切り・改行区切り):" Margin="0,5,0,5"/>
                    <TextBox x:Name="txtValue" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

                    <TextBlock x:Name="lblReadAction" Text="読み取りアクション番号:" Margin="0,5,0,5" Visibility="Collapsed"/>
                    <ComboBox x:Name="cmbReadAction" Height="25" Visibility="Collapsed" Margin="0,0,0,10"/>

                    <CheckBox x:Name="chkAutoExpandRange" Content="範囲を自動拡張（データサイズに合わせる）"
                              IsChecked="False" Margin="0,5,0,0"
                              ToolTip="チェックを入れると、読み取ったデータのサイズに合わせて自動的に範囲を拡張します。範囲欄には開始位置のみ指定してください（例: A1）"/>
                </StackPanel>

                <!-- 注意書き -->
                <Border Background="#FFF9E6" BorderBrush="#FFD700" BorderThickness="1"
                        Padding="10" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠" FontSize="16" Foreground="#FF8C00" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock TextWrapping="Wrap" Foreground="#333333">
                            <Run Text="注意: セル内にタブ文字や改行が含まれる場合、"/>
                            <LineBreak/>
                            <Run Text="読み取り結果が正しく分割されない可能性があります。"/>
                            <LineBreak/>
                            <Run Text="データは単一セルに単一の値が入っている前提で動作します。"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタン（固定位置） -->
        <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnOK" Content="OK" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True"/>
                <Button x:Name="btnCancel" Content="キャンセル" Width="80" Height="30" IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
