<Window x:Class="RPAEditor.Dialogs.FolderCreateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="フォルダ作成" Height="200" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- フォルダパス -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="作成するフォルダパス:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtFolderPath" Grid.Column="0" Padding="5" VerticalContentAlignment="Center"/>
                <Button x:Name="btnBrowse" Grid.Column="1" Content="参照..." Width="80" Margin="5,0,0,0" Click="BtnBrowse_Click"/>
            </Grid>
            <TextBlock Text="※ 親フォルダが存在しない場合は自動的に作成されます"
                       FontSize="10" Foreground="Gray" Margin="0,3,0,0"/>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Height="32" Margin="0,0,10,0" Click="BtnOk_Click" IsDefault="True"/>
            <Button Content="キャンセル" Width="100" Height="32" Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
