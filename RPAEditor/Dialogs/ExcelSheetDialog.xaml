<Window x:Class="RPAEditor.Dialogs.ExcelSheetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excel シート操作" Height="550" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 操作種類選択 -->
        <TextBlock Grid.Row="0" Text="操作種類:" FontWeight="Bold" Margin="0,0,0,5"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
            <RadioButton x:Name="rbAddSheet" Content="シートを追加" IsChecked="True" Margin="0,0,0,5" Checked="OperationType_Changed"/>
            <RadioButton x:Name="rbDeleteSheet" Content="シートを削除" Margin="0,0,0,5" Checked="OperationType_Changed"/>
            <RadioButton x:Name="rbRenameSheet" Content="シート名を変更" Margin="0,0,0,5" Checked="OperationType_Changed"/>
            <RadioButton x:Name="rbCopySheet" Content="シートをコピー" Margin="0,0,0,5" Checked="OperationType_Changed"/>
            <RadioButton x:Name="rbSheetExists" Content="シート存在確認" Margin="0,0,0,5" Checked="OperationType_Changed"/>
        </StackPanel>

        <!-- ファイル参照方法選択 -->
        <TextBlock x:Name="lblFileRefMethod" Grid.Row="2" Text="ファイル指定方法:" Margin="0,0,0,5"/>
        <StackPanel x:Name="spFileRefMethod" Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <RadioButton x:Name="rbFilePath" Content="ファイルパス" IsChecked="True" Margin="0,0,20,0" Checked="FileRefMethod_Changed"/>
            <RadioButton x:Name="rbOpenAction" Content="開くアクション番号" Checked="FileRefMethod_Changed"/>
        </StackPanel>

        <!-- ファイルパス（直接指定） -->
        <TextBlock x:Name="lblFilePath" Grid.Row="4" Text="ファイルパス:" Margin="0,0,0,5"/>
        <DockPanel x:Name="dpFilePath" Grid.Row="5" Margin="0,0,0,15">
            <Button x:Name="btnBrowse" Content="参照..." DockPanel.Dock="Right" Width="70" Margin="5,0,0,0" Click="BtnBrowse_Click"/>
            <TextBox x:Name="txtFilePath" VerticalContentAlignment="Center"/>
        </DockPanel>

        <!-- 開くアクション選択 -->
        <TextBlock x:Name="lblOpenAction" Grid.Row="4" Text="開くアクション:" Margin="0,0,0,5" Visibility="Collapsed"/>
        <ComboBox x:Name="cmbOpenActions" Grid.Row="5" Margin="0,0,0,15" Height="30" VerticalContentAlignment="Center" Visibility="Collapsed"/>

        <!-- シート名（追加・削除・存在確認） -->
        <TextBlock x:Name="lblSheetName" Grid.Row="6" Text="シート名:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtSheetName" Grid.Row="7" Margin="0,0,0,15" VerticalContentAlignment="Center" Height="30"/>

        <!-- 変更前のシート名（名前変更） -->
        <TextBlock x:Name="lblOldSheetName" Grid.Row="6" Text="変更前のシート名:" Margin="0,0,0,5" Visibility="Collapsed"/>
        <TextBox x:Name="txtOldSheetName" Grid.Row="7" Margin="0,0,0,15" VerticalContentAlignment="Center" Height="30" Visibility="Collapsed"/>

        <!-- 変更後のシート名（名前変更） -->
        <TextBlock x:Name="lblNewSheetName" Grid.Row="8" Text="変更後のシート名:" Margin="0,0,0,5" Visibility="Collapsed"/>
        <TextBox x:Name="txtNewSheetName" Grid.Row="9" Margin="0,0,0,15" VerticalContentAlignment="Center" Height="30" Visibility="Collapsed"/>

        <!-- コピー元のシート名（コピー） -->
        <TextBlock x:Name="lblSourceSheetName" Grid.Row="6" Text="コピー元のシート名:" Margin="0,0,0,5" Visibility="Collapsed"/>
        <TextBox x:Name="txtSourceSheetName" Grid.Row="7" Margin="0,0,0,15" VerticalContentAlignment="Center" Height="30" Visibility="Collapsed"/>

        <!-- コピー先のシート名（コピー） -->
        <TextBlock x:Name="lblDestSheetName" Grid.Row="8" Text="コピー先のシート名:" Margin="0,0,0,5" Visibility="Collapsed"/>
        <TextBox x:Name="txtDestSheetName" Grid.Row="9" Margin="0,0,0,15" VerticalContentAlignment="Center" Height="30" Visibility="Collapsed"/>

        <!-- 説明 -->
        <TextBlock x:Name="txtDescription" Grid.Row="14" TextWrapping="Wrap" Foreground="Gray" Margin="0,0,0,15" Text="シートを追加します。"/>

        <!-- ボタン -->
        <StackPanel Grid.Row="16" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnOk" Content="OK" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True" Click="BtnOk_Click"/>
            <Button x:Name="btnCancel" Content="キャンセル" Width="80" Height="30" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
