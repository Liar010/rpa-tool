<Window x:Class="RPAEditor.WindowActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ウィンドウ操作設定" Height="400" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 操作タイプ選択 -->
        <TextBlock Grid.Row="0" Text="操作の種類:" Margin="0,5"/>
        <ComboBox x:Name="cmbActionType" Grid.Row="1" Margin="0,5" Height="25">
            <ComboBoxItem Content="アプリケーション起動" Tag="Launch"/>
            <ComboBoxItem Content="ウィンドウをアクティブ化" Tag="Activate"/>
            <ComboBoxItem Content="ウィンドウを最大化" Tag="Maximize"/>
            <ComboBoxItem Content="ウィンドウを最小化" Tag="Minimize"/>
            <ComboBoxItem Content="ウィンドウを元に戻す" Tag="Restore"/>
            <ComboBoxItem Content="ウィンドウを閉じる" Tag="Close"/>
        </ComboBox>

        <!-- アプリ起動用の設定 -->
        <StackPanel x:Name="pnlLaunch" Grid.Row="2" Margin="0,10,0,0" Visibility="Collapsed">
            <TextBlock Text="実行ファイル:" Margin="0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtExecutablePath" Grid.Column="0" Height="25" Margin="0,5,5,5"/>
                <Button x:Name="btnBrowse" Grid.Column="1" Content="参照..." Width="80" Height="25" Margin="0,5"/>
            </Grid>

            <TextBlock Text="引数（オプション）:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtArguments" Height="25" Margin="0,5"/>

            <TextBlock Text="起動後の待機時間（ミリ秒）:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtWaitAfterLaunch" Height="25" Margin="0,5" Text="1000"/>
        </StackPanel>

        <!-- ウィンドウ参照方法選択 -->
        <StackPanel x:Name="pnlWindowTitle" Grid.Row="3" Margin="0,10,0,0" Visibility="Collapsed">
            <TextBlock Text="ウィンドウの指定方法:" Margin="0,5,0,5"/>

            <RadioButton x:Name="rbByTitle" Content="ウィンドウタイトルで指定" IsChecked="True" Margin="0,3"/>
            <StackPanel x:Name="pnlTitleInput" Margin="20,5,0,0">
                <TextBlock Text="ウィンドウタイトル（部分一致）:" Margin="0,5"/>
                <TextBox x:Name="txtWindowTitle" Height="25" Margin="0,5"/>
                <TextBlock Text="※ウィンドウのタイトルバーに表示されている文字列の一部を入力"
                           FontStyle="Italic"
                           Foreground="Gray"
                           FontSize="11"
                           TextWrapping="Wrap"
                           Margin="0,3"/>
            </StackPanel>

            <RadioButton x:Name="rbByLaunchAction" Content="起動アクションで指定" Margin="0,10,0,3"/>
            <StackPanel x:Name="pnlLaunchActionInput" Margin="20,5,0,0" Visibility="Collapsed">
                <TextBlock Text="起動アクション:" Margin="0,5"/>
                <ComboBox x:Name="cmbLaunchAction" Height="25" Margin="0,5"/>
                <TextBlock Text="※このアクションより前に実行される「アプリケーション起動」アクション"
                           FontStyle="Italic"
                           Foreground="Gray"
                           FontSize="11"
                           TextWrapping="Wrap"
                           Margin="0,3"/>
            </StackPanel>
        </StackPanel>

        <!-- 説明 -->
        <StackPanel Grid.Row="5" Margin="0,10" VerticalAlignment="Top">
            <TextBlock Text="例:"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="txtExample"
                       FontStyle="Italic"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Text="操作の種類を選択してください"/>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnOK" Content="OK" Width="80" Height="30" Margin="5" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="キャンセル" Width="80" Height="30" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
