<Window x:Class="RPAEditor.Dialogs.FileExistsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ファイル/フォルダ存在確認" Height="280" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 対象パス -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="対象パス:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtTargetPath" Grid.Column="0" Padding="5" VerticalContentAlignment="Center"/>
                <Button x:Name="btnBrowse" Grid.Column="1" Content="参照..." Width="80" Margin="5,0,0,0" Click="BtnBrowse_Click"/>
            </Grid>
        </StackPanel>

        <!-- 対象タイプ -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="対象タイプ:" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="rbFile" Content="ファイル" IsChecked="True" Margin="0,0,20,0" VerticalAlignment="Center"/>
                <RadioButton x:Name="rbFolder" Content="フォルダ" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- 動作設定 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="動作設定:" FontWeight="Bold" Margin="0,0,0,5"/>
            <CheckBox x:Name="chkFailIfNotExists" Content="存在しない場合はエラーとする" IsChecked="True"/>
            <TextBlock Text="※ チェックを外すと、存在しなくても成功として次のアクションに進みます"
                       FontSize="10" Foreground="Gray" Margin="20,3,0,0" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="100" Height="32" Margin="0,0,10,0" Click="BtnOk_Click" IsDefault="True"/>
            <Button Content="キャンセル" Width="100" Height="32" Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
