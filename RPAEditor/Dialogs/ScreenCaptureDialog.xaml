<Window x:Class="RPAEditor.ScreenCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="画面キャプチャ"
        WindowState="Maximized"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        Cursor="Cross"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="canvas" Background="#AA000000" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseMove="Canvas_MouseMove" MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
        <Rectangle x:Name="selectionRect" Stroke="Red" StrokeThickness="2" Fill="Transparent" Visibility="Collapsed"/>

        <!-- 説明テキスト -->
        <Border Background="#CC000000" CornerRadius="5" Padding="15" Canvas.Left="20" Canvas.Top="20">
            <TextBlock Foreground="White" FontSize="14">
                <Run Text="ドラッグして範囲を選択してください" FontWeight="Bold"/>
                <LineBreak/>
                <Run Text="ESCキーでキャンセル" FontSize="12"/>
            </TextBlock>
        </Border>
    </Canvas>
</Window>
