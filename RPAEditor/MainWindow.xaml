<Window x:Class="RPAEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPAEditor"
        mc:Ignorable="d"
        Title="RPAオートメーションエディタ" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <ToolBar Grid.Row="0" Padding="5">
            <Button x:Name="btnNewScript" Content="新規" Width="60" Margin="2"/>
            <Button x:Name="btnOpenScript" Content="開く" Width="60" Margin="2"/>
            <Button x:Name="btnSaveScript" Content="保存" Width="60" Margin="2"/>
            <Separator/>
            <Button x:Name="btnRunScript" Content="▶ 実行" Width="80" Margin="2" Background="#4CAF50" Foreground="White"/>
            <Button x:Name="btnStopScript" Content="■ 停止" Width="80" Margin="2" Background="#F44336" Foreground="White" IsEnabled="False"/>
        </ToolBar>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- 左：アクション追加パネル -->
            <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0" Background="#F5F5F5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="アクション追加" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                        <!-- 基本操作カテゴリ -->
                        <Expander Header="📝 基本操作" IsExpanded="True" Margin="0,5">
                            <StackPanel Margin="5,5,0,5">
                                <Button x:Name="btnAddMouseClick" Content="マウスクリック" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddTextInput" Content="テキスト入力" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddKeyPress" Content="キー入力" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddHotKey" Content="ショートカットキー" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddWait" Content="待機" Margin="0,3" Padding="5" Height="32"/>
                            </StackPanel>
                        </Expander>

                        <!-- ウィンドウ操作カテゴリ -->
                        <Expander Header="💻 ウィンドウ操作" IsExpanded="True" Margin="0,5">
                            <StackPanel Margin="5,5,0,5">
                                <Button x:Name="btnAddWindow" Content="ウィンドウ操作" Margin="0,3" Padding="5" Height="32"/>
                            </StackPanel>
                        </Expander>

                        <!-- ファイル操作カテゴリ -->
                        <Expander Header="📂 ファイル操作" IsExpanded="False" Margin="0,5">
                            <StackPanel Margin="5,5,0,5">
                                <Button x:Name="btnAddFileCopy" Content="ファイルコピー" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddFileMove" Content="ファイル移動" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddFileDelete" Content="ファイル削除" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddFileRename" Content="ファイル名変更" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddFolderCreate" Content="フォルダ作成" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddFileExists" Content="存在確認" Margin="0,3" Padding="5" Height="32"/>
                            </StackPanel>
                        </Expander>

                        <!-- Excel操作カテゴリ -->
                        <Expander Header="📊 Excel操作" IsExpanded="False" Margin="0,5">
                            <StackPanel Margin="5,5,0,5">
                                <Button x:Name="btnAddExcelOpen" Content="ファイルを開く" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddExcelCell" Content="セル操作" Margin="0,3" Padding="5" Height="32"/>
                                <Button x:Name="btnAddExcelSaveClose" Content="保存/閉じる" Margin="0,3" Padding="5" Height="32"/>
                            </StackPanel>
                        </Expander>

                        <Separator Margin="0,10"/>

                        <!-- 編集機能 -->
                        <TextBlock Text="編集" FontWeight="Bold" FontSize="14" Margin="0,5,0,10"/>
                        <Button x:Name="btnEditAction" Content="編集" Margin="0,3" Padding="5" Height="30"/>
                        <Button x:Name="btnDeleteAction" Content="削除" Margin="0,3" Padding="5" Height="30"/>
                        <Button x:Name="btnMoveUp" Content="↑ 上へ" Margin="0,3" Padding="5" Height="30"/>
                        <Button x:Name="btnMoveDown" Content="↓ 下へ" Margin="0,3" Padding="5" Height="30"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- 中央：アクションリスト -->
            <Border Grid.Column="1" Background="White" Padding="10">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="アクションリスト" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <ListBox x:Name="lstActions"
                             DisplayMemberPath="DisplayText"
                             SelectionMode="Single"
                             FontSize="13"/>
                </DockPanel>
            </Border>

            <!-- 右：プロパティパネル -->
            <Border Grid.Column="2" BorderBrush="#DDDDDD" BorderThickness="1,0,0,0" Background="#F9F9F9">
                <StackPanel Margin="10">
                    <TextBlock Text="アクション詳細" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <TextBlock Text="名前:" Margin="0,5,0,2"/>
                    <TextBox x:Name="txtActionName" IsReadOnly="True" Background="#EEEEEE"/>

                    <TextBlock Text="説明:" Margin="0,10,0,2"/>
                    <TextBox x:Name="txtActionDescription"
                             IsReadOnly="True"
                             Background="#EEEEEE"
                             TextWrapping="Wrap"
                             Height="60"
                             VerticalScrollBarVisibility="Auto"/>

                    <TextBlock Text="実行状態:" Margin="0,10,0,2"/>
                    <TextBlock x:Name="txtExecutionStatus" Text="待機中" FontWeight="Bold" Foreground="Gray"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2" Background="#EEEEEE">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="準備完了"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtActionCount" Text="アクション数: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
