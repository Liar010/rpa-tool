<Window x:Class="RPAEditor.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ログビューアー" Height="500" Width="800" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#F5F5F5" Margin="10">
            <!-- ログレベルフィルタ -->
            <TextBlock Text="表示レベル:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <CheckBox x:Name="chkDebug" Content="DEBUG" IsChecked="False" Margin="0,0,15,0" Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="chkInfo" Content="INFO" IsChecked="True" Margin="0,0,15,0" Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="chkWarn" Content="WARN" IsChecked="True" Margin="0,0,15,0" Checked="FilterChanged" Unchecked="FilterChanged"/>
            <CheckBox x:Name="chkError" Content="ERROR" IsChecked="True" Margin="0,0,15,0" Checked="FilterChanged" Unchecked="FilterChanged"/>

            <Separator Margin="10,0"/>

            <!-- 自動スクロール -->
            <CheckBox x:Name="chkAutoScroll" Content="自動スクロール" IsChecked="True" Margin="0,0,15,0"/>

            <Separator Margin="10,0"/>

            <!-- クリアボタン -->
            <Button x:Name="btnClear" Content="クリア" Width="80" Height="26" Click="BtnClear_Click"/>
        </StackPanel>

        <!-- ログ表示エリア -->
        <TextBox x:Name="txtLogs" Grid.Row="1"
                 Background="White"
                 FontFamily="Consolas"
                 FontSize="12"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"/>

        <!-- ステータスバー -->
        <StatusBar Grid.Row="2" Background="#EEEEEE">
            <StatusBarItem>
                <TextBlock x:Name="txtLogCount" Text="ログ数: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
